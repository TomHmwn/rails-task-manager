<h1>My tasks</h1>
<ul>
<% @tasks.each do|task| %>
  <li>
  <%= check_box_tag(task.completed, value='1', checked=task.completed) %>
  <%= link_to task.title, task_path(task)%>
  <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  </li>
<%end%>
</ul>
<hr>
<%= link_to "Add a new task", tasks_new_path%>
